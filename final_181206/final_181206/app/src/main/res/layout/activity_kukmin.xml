<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/beer_6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="국민 IPA"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="280dp"
                    android:layout_height="150dp"
                    android:text=
                        "\n Style : IPA\n 알코올 : 7.0%\n 엄청난 양의 홉에서 비롯된 두터운 바디감과\n 완만한 촉감의 밸런스. 잘 익은 꿀 맛 파인애플\n
풍미와 신선한 파파야 향, 상큼한 자몽과 달콤 한 멜론이 느껴지는 맥주. \n\n"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/favoriteButton"
                        android:layout_width="68dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:text="즐겨찾기로!"
                        android:textSize="10dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/buttonshape_default"/>
                    <Button
                        android:id="@+id/locationButton"
                        android:layout_width="68dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:text="주변 입점위치"
                        android:textSize="10dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/buttonshape_default"/>

                    <Button
                        android:id="@+id/couponButton"
                        android:layout_width="68dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:text="쿠폰받기"
                        android:textSize="10dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/buttonshape_default"/>

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맥주 별점"
                android:textSize="20dp" />

            <RatingBar
                android:id="@+id/ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="0.0"
                android:stepSize="0.5"
                style="@style/CustomRatingBar"/>


            <TextView
                android:id="@+id/opinionResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp" />

            <Button
                android:id="@+id/webButton"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:text="후기 및 QnA 버튼"
                android:layout_margin="3dp"
                android:background="@drawable/buttonshape_default"/>

            <Button
                android:id="@+id/webviewButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:background="@drawable/buttonshape_default"
                android:text="더부스 홈피 바로가기" />


        </LinearLayout>


    </ScrollView>




</LinearLayout>