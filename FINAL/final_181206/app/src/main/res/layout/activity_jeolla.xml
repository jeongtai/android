<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/beer_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전라 마일드 에일"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="280dp"
                    android:layout_height="150dp"
                    android:text=
                        "\n 구분 : 상면발효\n 알코올 : 4.5%\n 에일맥주지만 라거처럼 깔끔한 맛으로 가볍게
                        \n 즐길 수 있고, 플로럴과 시트러스향을 함께 느낄 수 있습니다.\n\n"
                    android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/favoriteButton"
                        android:layout_width="68dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:text="즐겨찾기로!"
                        android:textSize="10dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/buttonshape_default"/>
                    <Button
                        android:id="@+id/locationButton"
                        android:layout_width="68dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:text="주변 입점위치"
                        android:textSize="10dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/buttonshape_default"/>

                    <Button
                        android:id="@+id/couponButton"
                        android:layout_width="68dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:text="쿠폰받기"
                        android:textSize="10dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/buttonshape_default"/>

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맥주 별점"
                android:textSize="20dp" />

            <RatingBar
                android:id="@+id/ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="0.0"
                android:stepSize="0.5"
                style="@style/CustomRatingBar"/>


            <TextView
                android:id="@+id/opinionResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp" />

            <Button
                android:id="@+id/webButton"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:text="후기 및 QnA 버튼"
                android:layout_margin="3dp"
                android:background="@drawable/buttonshape_default"/>

            <Button
                android:id="@+id/webviewButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="3dp"
                android:background="@drawable/buttonshape_default"
                android:text="세븐브로이 홈피 바로가기" />


        </LinearLayout>


    </ScrollView>




</LinearLayout>