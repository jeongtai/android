<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/beer11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여수"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="280dp"
                    android:layout_height="150dp"
                    android:text=
                        "IBU : 28 \n 알코올 : 5.0%\n 전라도 산 보리를 사용한 고소하고 담백한 맛이 특징이다.
카라멜 몰트에서 느껴지는 고소한 견과류, 커피 아로마와 전라도 산
호품 보리 특유의 바디감이 훌륭한 균형을 이룬다.\n\n"
                android:textSize="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/favoriteButton"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="즐겨찾기로!"
                        android:textSize="10dp" />
                    <Button
                        android:id="@+id/locationButton"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="주변 입점위치"
                        android:textSize="10dp" />
                    <Button
                        android:id="@+id/couponButton"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="쿠폰받기"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="맥주 별점"
                android:textSize="20dp" />

            <RatingBar
                android:id="@+id/ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="코멘트 남기기"
                android:textSize="20dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edittext"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="이 맥주는요..."
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button_cmtinput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="코멘트입력" />

            </LinearLayout>

            <TextView
                android:id="@+id/opinionResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp" />

            <Button
                android:id="@+id/button_cmtdelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="코멘트삭제" />

            <Button
                android:id="@+id/webviewButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="코리아크래프트브루어리 홈피 바로가기" />


        </LinearLayout>


    </ScrollView>




</LinearLayout>